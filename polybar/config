[colors]
background = #282828
background-alt = #928374
foreground = #ebdbb2
foreground-alt = #a89984
primary = #d79921
secondary = #b16286
alert = #fb4934

[bar/main]
monitor = ${env:Monitor:eDP-1}
width = 100%
height = 32
radius = 0
fixed-center = true
bottom = true

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 3

border-size = 0
border-color = #00000000

padding-left = 0
padding-right = 2

module-margin-left = 1
module-margin-right = 2

font-0 = Noto Sans:size=12;2
font-1 = Font Awesome 5 Pro:style=Regular:size=12;2
font-2 = Noto Sans:style=Bold:size=12;2

modules-left = i3
modules-center = 
modules-right = xkeyboard alsa filesystem cpu memory temperature battery eth date

tray-position = right
tray-padding = 0

;wm-restack = i3

;override-redirect = true

;scroll-up = i3wm-wsnext
;scroll-down = i3wm-wsprev

cursor-click = pointer
cursor-scroll = ns-resize

